@using FaxMailFrontend.Data
@using FaxMailFrontend.ViewModel
@namespace FaxMailFrontend.Components

<div style="border: 2px solid black; padding: 5px; background-color: lightgray; margin: 10px;">
    <p>
        <h3>Absenderinformationen</h3>
    </p>
    <p>
        <div style="text-align: center;">
            <table style="margin: auto; text-align: center; border: 2px solid black; width: 100%;">
                <tr style="margin: auto; text-align: left; border: 2px solid black;">
                    <td style="margin: auto; text-align: left; border: 2px solid black;">Name:</td>
                    <td style="margin: auto; text-align: right; border: 2px solid black;">@Username</td>
                </tr>
                <tr>
                    <td style="margin: auto; text-align: left; border: 2px solid black;">Telefonnummer:</td>
                    <td style="margin: auto; text-align: right; border: 2px solid black;">@Telefonnummer</td>
                </tr>
                <tr>
                    <td style="margin: auto; text-align: left; border: 2px solid black;">E-Mail:</td>
                    <td style="margin: auto; text-align: right; border: 2px solid black;">@Mail</td>
                </tr>
            </table>
        </div>
    </p>
</div>

@code {
    [Parameter]
    public string Username { get; set; } = "";
    [Parameter]
    public string Telefonnummer { get; set; } = "";
    [Parameter]
    public string Mail { get; set; } = "";
}
